# ───── Core ─────
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ───── OpenAI ─────
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-5.2
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT_MS=30000

# ───── Anthropic Claude (optional) ─────
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=2048
ANTHROPIC_TEMPERATURE=0.3
ANTHROPIC_TIMEOUT_MS=30000

# ───── Google Gemini (optional) ─────
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.3
GEMINI_TIMEOUT_MS=30000

# ───── LLM Routing ─────
LLM_PRIMARY_PROVIDER=openai         # openai | anthropic | gemini
LLM_SECONDARY_PROVIDER=anthropic    # failover provider (optional)
LLM_TERTIARY_PROVIDER=              # second failover (optional)
LLM_ROUTING_STRATEGY=config         # config | intent | ab_test
LLM_AB_TEST_SPLIT=50                # % of traffic to secondary (for ab_test strategy)

# ───── Self-Learning Pipeline ─────
LEARNING_ENABLED=true
LEARNING_PIPELINE_INTERVAL_HOURS=24

# ───── Redis ─────
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=zobot:

# ───── Zoho SalesIQ ─────
SALESIQ_BASE_URL=https://salesiq.zoho.com
SALESIQ_APP_ID=your-app-id
SALESIQ_ACCESS_TOKEN=your-access-token
SALESIQ_WEBHOOK_SECRET=your-webhook-secret
SALESIQ_SCREEN_NAME=zobot

# ───── Security ─────
ADMIN_API_KEY=change-me-in-production
RATE_LIMIT_PER_VISITOR=30
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_PER_TENANT=300

# ───── Observability ─────
ENABLE_METRICS=true
ENABLE_TRANSCRIPTS=false
TRANSCRIPT_ENCRYPTION_KEY=

# ───── Knowledge / RAG (optional) ─────
RAG_ENABLED=false
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_TOP_K=5

# ───── VineRetail (Vinculum) — Order & Shipment APIs ─────
VINERETAIL_BASE_URL=https://dentalkart.vineretail.com/RestWS/api/eretail/v1
VINERETAIL_API_KEY=your-vineretail-api-key
VINERETAIL_API_OWNER=your-vineretail-api-owner

# ───── Clickpost — Shipment Tracking ─────
CLICKPOST_BASE_URL=https://api.clickpost.in/api/v2
CLICKPOST_API_KEY=your-clickpost-key
CLICKPOST_USERNAME=dentalkart

# ───── Dentalkart Admin — Returns API ─────
DENTALKART_ADMIN_BASE_URL=https://adminapis.dentalkart.com
DENTALKART_ADMIN_API_KEY=your-dentalkart-admin-api-key

# ───── Dentalkart Product Search ─────
DENTALKART_SEARCH_BASE_URL=https://search-staging.dentalkart.com/api/v1

# ───── Chat Session Management ─────
CHAT_SESSION_TTL_DAYS=90
CHAT_MAX_HISTORY_PER_VISITOR=50
CHAT_CSAT_ENABLED=true
CHAT_AUTO_GREETING_ENABLED=true
CHAT_MAX_UPLOAD_SIZE_MB=10
CHAT_UPLOAD_DIR=uploads

# ───── Tenant ─────
DEFAULT_TENANT_ID=default
